<%= form_for(@appointment.applicants.find_by(user_id: current_user.id),
             html: { method: :patch }) do |f| %>

  <div><%= hidden_field_tag :appointment_id, @appointment.id %></div>
  <div><%= hidden_field_tag :user_id, current_user.id %></div>
  <div><%= hidden_field_tag :status, 4 %></div>

  <%= f.submit "Cancel Request", class: "btn btn-warning" %>
<% end %>