<%= provide(:title, @user.fullname) %>
<div class="row">
  <div class="col-md-3">
    <p>
      <div class="float-left">
        <%= @user.fullname %>
      </div>
      <div class="float-right">

        <%= link_to edit_user_path(current_user) do %>
          <i class="glyphicon glyphicon-pencil"></i>
        <% end %>

      </div>
    </p>
    <p><%= @user.username %></p>
    <p><%= @user.email %></p>
  </div>
  <div class="col-md-9">
    Some features or histories would be shown here.
  </div>
</div>